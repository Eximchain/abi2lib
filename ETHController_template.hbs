    * @param { address } from - from address
    {{#each inputs}}
    * @param { {{type}} } {{name}}
    {{/each}}
    * @description execute get method without a transaction on {{name}}
    * @returns { Promise }
    * */
    get_{{name}}(from{{#each inputs}}, {{name}}{{/each}}){
        return this.connector.read("{{name}}", from, [{{{inputList inputs}}}]);
    }
{{else}}
